{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cartitem</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cartItem.id }}</td>
            </tr>
            <tr>
                <th>Orderquantity</th>
                <td>{{ cartItem.orderQuantity }}</td>
            </tr>
            <tr>
                <th>Totalprice</th>
                <td>{{ cartItem.totalPrice }}</td>
            </tr>
            <tr>
                <th>Createddate</th>
                <td>{% if cartItem.createdDate %}{{ cartItem.createdDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ cartItem.status }}</td>
            </tr>
            <tr>
                <th>Contactname</th>
                <td>{{ cartItem.contactName }}</td>
            </tr>
            <tr>
                <th>Phonenumber</th>
                <td>{{ cartItem.phoneNumber }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cartitem_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('cartitem_edit', { 'id': cartItem.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
