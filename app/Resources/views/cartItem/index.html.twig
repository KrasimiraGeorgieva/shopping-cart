{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cartitems list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Orderquantity</th>
                <th>Totalprice</th>
                <th>Createddate</th>
                <th>Status</th>
                <th>Contactname</th>
                <th>Phonenumber</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cartItem in cartItems %}
            <tr>
                <td><a href="{{ path('cartitem_show', { 'id': cartItem.id }) }}">{{ cartItem.id }}</a></td>
                <td>{{ cartItem.orderQuantity }}</td>
                <td>{{ cartItem.totalPrice }}</td>
                <td>{% if cartItem.createdDate %}{{ cartItem.createdDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ cartItem.status }}</td>
                <td>{{ cartItem.contactName }}</td>
                <td>{{ cartItem.phoneNumber }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('cartitem_show', { 'id': cartItem.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('cartitem_edit', { 'id': cartItem.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cartitem_new') }}">Create a new cartItem</a>
        </li>
    </ul>
{% endblock %}
