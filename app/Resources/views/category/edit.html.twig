    <div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" action="{{ path('category_edit', {id: category.id}) }}" method="post">
            <fieldset>
                <legend>Edit Category</legend>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="product_name">Name</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="category_name" name="category[name]" value="{{ category.name }}">
                    </div>
                </div>

                {{ form(edit_form._token) }}
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <a class="btn btn-default" href="{{ path('category_show', {id: category.id}) }}">Cancel</a>
                        <button type="submit" class="btn btn-success">Edit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
