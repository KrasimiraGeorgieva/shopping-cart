{% extends 'base.html.twig' %}

{% block body %}
<table>
    <h1>{{ category.name }}</h1>
        <div class="container-fluid">
            <div class="row content">
                <div class="col-sm-3 sidenav">
                    <ul class="nav nav-pills nav-stacked">
                        <li class="active"><a href="{{ path('product_index') }}">Products</a></li>
                        {% for product in category.products %}
                        <li><a href="{{ path('product_show', {'id':product.id} ) }}">{{ product.name }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
</table>
    <ul>
        <a class="btn btn-default btn-sm" href="{{ path('category_index') }}">Back to categories list</a>

    </ul>

<div class="col-sm-6">
        {{ form_start(delete_form) }}
        <input type="submit"  class="btn btn-danger btn-lg pull-right" value="Delete">
        {{ form_end(delete_form) }}
</div>

{% endblock %}
