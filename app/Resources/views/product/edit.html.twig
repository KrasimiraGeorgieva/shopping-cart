{% extends 'base.html.twig' %}

{% block body %}

    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" action="{{ path('product_edit', {id: product.id}) }}" method="POST">
                <fieldset>
                    <legend>Edit Product</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="product_name">Name</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="product_name" placeholder="Name"
                                   name="product[name]" value="{{ product.name }}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="product_image">Image</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="product_image" placeholder="Image"
                                   name="product[image]" value="{{ product.image }}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="product_description">Description</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="product_description" placeholder="Description"
                                   name="product[description]" value="{{ product.description }}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="product_price">Price</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="product_price" placeholder="Price"
                                   name="product[price]" value="{{ product.price }}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="product_quantity">Quantity</label>
                        <div class="col-sm-4 ">
                            <input type="text" class="form-control" id="product_quantity" placeholder="Quantity"
                                   name="product[quantity]" value="{{ product.quantity }}">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="product_category">Category</label>
                        <div class="col-sm-4 ">
                            {{ form_widget(edit_form.category, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>

                    <fieldset>
                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="product_stock">In Stock / Out of Stock</label>
                            <div class="col-sm-4 ">
                                {{ form_widget(edit_form.stock, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                    </fieldset>

                    {{ form(edit_form._token) }}
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('product_show', {id: product.id}) }}">Cancel</a>
                            <button type="submit" class="btn btn-success">Edit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

{% endblock %}