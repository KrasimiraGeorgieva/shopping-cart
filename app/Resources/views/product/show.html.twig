{% extends 'base.html.twig' %}

{% block body %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" action="{{ path('product_show', { 'id': product.id }) }}" method="post">
                <fieldset>
                    {#<div>#}
                        {#<a href="{{ path('') }}" >Add to cart</a>#}
