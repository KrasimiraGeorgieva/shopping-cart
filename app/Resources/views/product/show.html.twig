                    <div class="col-sm-4">
                        <div class="panel-body"><img src="https://placehold.it/150x80?text=IMAGE" class="img-responsive" style="width:100%" alt="Image"></div>
                        <div class="panel-footer"><h1 >{{ product.name }}</h1></div>
                    </div>

                    <div class="col-sm-8">
                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="product_description">Description</label>
                            <div class="col-sm-4 ">
                                <input type="text" class="form-control" id="product_description" placeholder="Description" name="product[description]" value="{{ product.description }}" disabled>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="product_price">Price</label>
                            <div class="col-sm-4 ">
                                <input type="text" class="form-control" id="product_price" placeholder="Price" name="product[price]" value="{{ product.price }}" disabled>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="product_quantity">Quantity</label>
                            <div class="col-sm-4 ">
                                <input type="text" class="form-control" id="product_quantity" placeholder="Quantity" name="product[quantity]" value="{{ product.quantity }}" disabled>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="product_category">Category</label>
                            <div class="col-sm-4 ">
                                <input type="text" class="form-control" id="product_category" placeholder="Category" name="product[category]" value="{{ product.category }}" disabled>
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-sm-4 control-label" for="product_stock">Stock</label>
                            <div class="col-sm-4 ">
                                <input type="text" class="form-control"  value="{% if product.stock == 1 %}In Stock{% else
                                %}Out of Stock{% endif %}" disabled>
                            </div>
                        </div>
