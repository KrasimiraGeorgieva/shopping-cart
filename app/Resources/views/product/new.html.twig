{% extends 'base.html.twig' %}

{% block body %}
<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" action="{{ path('product_new') }}" method="POST">
            <fieldset>
                <div>{{ form_errors(form) }}</div>
                <legend>New Product</legend>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="product_name">Name</label>
                    <div class="col-sm-4 ">
                        {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="product_category">Category</label>
                    <div class="col-sm-4 ">
                        {{ form_widget(form.category, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="product_price">Price</label>
                    <div class="col-sm-4 ">
                        {{ form_widget(form.price, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="product_quantity">Quantity</label>
                    <div class="col-sm-4 ">
                        {{ form_widget(form.quantity, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="product_description">Description</label>
                    <div class="col-sm-4 ">
                        {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="product_image">Image</label>
                    <div class="col-sm-4 ">
                        {{ form_widget(form.image, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>

                {{ form_row(form._token) }}
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <a class="btn btn-default" href="{{ path('product_index') }}">Back</a>
                        <button type="submit" class="btn btn-success">Submit</button>
                    </div>
                </div>
    {{ form_end(form) }}
            </fieldset>
        </form>
    </div>
</div>
{% endblock %}
