{% extends 'base.html.twig' %}

{% block body %}

    <div class="well">
        <form class="form-horizontal" action="{{ path('product_delete', {id: product.id}) }}" method="POST">
            <fieldset>
                <legend>Delete Product</legend>
                <div class="col-sm-4">
                    <div class="panel-body"><img src="{{ product.image }}" class="img-rounded"
                                                 style="width:250px; height: 200px"
                                                 alt="Image"></div>
                    <div class="panel-footer"><h1>{{ product.name }}</h1></div>
                </div>

                <div class="col-sm-8">
                    <div class="form-group">
                        <label class="col-sm-3 control-label" for="product_description">Description</label>
                        <div class="col-sm-9 ">
                            <input type="text" class="form-control" id="product_description" placeholder="Description"
                                   name="product[description]" value="{{ product.description }}" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label" for="product_price">Price</label>
                        <div class="col-sm-9 ">
                            <input type="text" class="form-control" id="product_price" placeholder="Price"
                                   name="product[price]" value="{{ product.price }}" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label" for="product_quantity">Quantity</label>
                        <div class="col-sm-9 ">
                            <input type="text" class="form-control" id="product_quantity" placeholder="Quantity"
                                   name="product[quantity]" value="{{ product.quantity }}" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label" for="product_category">Category</label>
                        <div class="col-sm-9 ">
                            <input type="text" class="form-control" id="product_name"
                                   name="product[category]" value="{{ product.category }}" disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3 control-label" for="product_stock">In Stock/Out of Stock</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control"
                                   value="{% if product.stock == 1 %}In Stock{% else %}Out of Stock{% endif %}"
                                   disabled>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-9 col-sm-offset-3">
                            <a class="btn btn-default" href="{{ path('product_show', {id: product.id}) }}">Cancel</a>
                            <a class="btn btn-danger"
                               href="{{ path('product_delete_process', {'id': product.id }) }}">Delete</a>
                        </div>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>

{% endblock %}