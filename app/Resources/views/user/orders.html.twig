{% extends 'base.html.twig' %}

{% block body_id 'user_orders' %}

{% block main %}

    <div>
        <h2>User Information: </h2>
        Email: {{ user.email }}
        <br>
        FullName: {{ user.fullName }}
        <p>Total Transactions: <strong>{{ orders|length }}</strong></p>
        <p>Total Money Spend: <strong>${{ total|number_format(2, '.', ',') }}</strong></p>
        <p>Money in wallet: <strong>${{ wallet|number_format(2, '.', ',') }}</strong></p>
    </div>

    <hr/>

    <h2>Shopping Cart Transactions:</h2>

    <hr/>

    {% for order in orders %}
        <h4>Product Name: {{ order.product.name }}</h4>
        <p>Price: <strong>${{ order.product.price|number_format(2, '.', ',') }}</strong></p>
        <p>Status: <strong>Completed</strong></p>

        <strong>
            <small style="float: right">{{ order.createdDate is empty ? "" : order.createdDate|date("F jS Y \\a\\t g:ia") }}</small>
        </strong>
        <br/>
        <hr/>

    {% endfor %}

{% endblock %}
