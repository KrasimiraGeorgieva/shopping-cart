{% extends 'base.html.twig' %}

{% block body_id 'register' %}

{% block body %}

    {#{{ form(form) }}#}

    <div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" name="authenticate" action="{{ path('user_register') }}" method="post">
            <fieldset>
                <legend>Register</legend>

                <div style="color: red">
                    {{ form_errors(form) }}
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label">Email</label>
                    <div class="col-sm-4 ">
                        {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label">Full Name</label>
                    <div class="col-sm-4 ">
                        {{ form_widget(form.fullName, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label">Password</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.password, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label">Confirm Password</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.confirm, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>

                {{  form_row(form._token) }}

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <a class="btn btn-default" href="{{ path('homepage') }}">Cancel</a>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

{% endblock %}