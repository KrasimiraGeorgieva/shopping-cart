{% extends 'base.html.twig' %}

{% block body_id 'profile' %}

{% block main %}

    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" name="authenticate" action="{{ path('user_profile') }}" method="post">
                <fieldset>
                    <legend>{{ app.user.fullName }} Profile</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_email">Email</label>
                        <div class="col-sm-4 ">
                            {{ form_widget(form.email, { 'attr':{'disabled':'disabled'} }) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_fullName">Full Name</label>
                        <div class="col-sm-4 ">
                            {{ form_widget(form.fullName, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>
                    <hr>
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="user_password_second">Wallet</label>
                        <div class="col-sm-4">
                            <input type="number" class="form-control" id="user_wallet" name="user[wallet]"
                                   value="{{ user.wallet }}">
                        </div>
                    </div>

                    {{ form_row(form._token) }}
                    <div class="form-group">
                        <div class="col-sm-12 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('homepage') }}">Cancel</a>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

{% endblock %}