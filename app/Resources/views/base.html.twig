<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Shopping cart{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
            <link rel="stylesheet" href="{{ asset('css/bootstrap-datetimepicker.min.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <style>

        footer {
            background-color: #f2f2f2;
            padding: 25px;
        }
    </style>
    <body id="{% block body_id %}{% endblock %}">

    {% block header %}
        <ul class="nav nav-tabs">
            <li role="presentation" class="active"><a href="{{ path('homepage') }}">Home</a></li>
            <li role="presentation"><a href="{{ path('category_index') }}">All Categories</a></li>
            <li role="presentation"><a href="{{ path('product_index') }}">All Products</a></li>
            <li role="presentation"><a href="#">Deals</a></li>
            <li role="presentation"><a href="{{ path('cartItem_index') }}">Cart</a></li>

        </ul>

        <header>
            <div class="navbar navbar-default navbar-fixed-top" role="navigation">
                <div class="container">
                    <div class="navbar-header">
                        <a href="{{ path('homepage') }}" class="navbar-brand">SHOPPING CART</a>
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav navbar-right">

                            {% if app.user and app.getUser().isAdmin() %}
                                {#<li>#}
                                    {#<a href="#" class="navbar-brand">#}
                                        {#Welcome {{ app.user.fullName }}#}
                                    {#</a>#}
                                {#</li>#}
                                <li>
                                    <a href="{{ path('admin_panel') }}">
                                        Admin Panel
                                    </a>
                                </li>
                            {% endif %}
                            {% if app.user %}
                                <li>
                                    <a href="{{ path('user_profile') }}">
                                        {{ app.user.fullName }}
                                    </a>
                                </li>
                                <li>
                                    <a href="{{ path('security_logout') }}">
                                        Logout
                                    </a>
                                </li>
                            {% else %}
                                <li>
                                    <a href="{{ path('user_register') }}">
                                        REGISTER
                                    </a>
                                </li>
                                <li>
                                    <a href="{{ path('security_login') }}">
                                        LOGIN
                                    </a>
                                </li>
                                <li>
                                    <a href="{{ path('cartItem_index') }}">
                                        CART
                                    </a>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </div>

            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="flash-{{ label }}" style="color: #18bc9c">
                        <h1 style="padding: 50px">{{ message }}</h1>
                    </div>
                {% endfor %}
            {% endfor %}

        </header>
    {% endblock %}
    <div class="container body-container">
        {% block body %}
            <div class="row">
                <div id="main" class="col-sm-9">
                    {% block main %}{% endblock %}
                </div>
            </div>
        {% endblock %}
    </div>
    {% block footer %}
        <footer class="container-fluid text-center">
            <p>&copy; 2017 - Krasimira Georgieva</p>
            <a href="https://github.com/KrasimiraGeorgieva/shopping-cart">Go
                to GitHub repository</a>
            <p><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span>
                krassi77bg@gmail.com</p>
        </footer>
    {% endblock %}

    {% block javascripts %}
        <script src="{{ asset('js/jquery-3.2.1.min.js') }}"></script>
        <script src="{{ asset('js/moment.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap.js') }}"></script>
        <script src="{{ asset('js/bootstrap-datetimepicker.min.js') }}"></script>
    {% endblock %}
    </body>
</html>
